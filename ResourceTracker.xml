<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Frame name="BUII_ResourcePointTemplate" inherits="BackdropTemplate" virtual="true">
        <Size x="15" y="15"/>
        <Scripts>
            <OnLoad>
                self:SetBackdrop({
                    edgeFile = "Interface\\Buttons\\WHITE8X8",
                    edgeSize = 1,
                    tile = false,
                })
                self:SetBackdropBorderColor(0, 0, 0, 1)
            </OnLoad>
        </Scripts>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="1" y="-1"/>
                        <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                    </Anchors>
                    <Color r="0.1" g="0.1" b="0.1" a="0.8"/>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <StatusBar parentKey="ProgressBar">
                <Anchors>
                    <Anchor point="TOPLEFT" x="1" y="-1"/>
                    <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        Mixin(self, SmoothStatusBarMixin)
                        self:SetMinMaxValues(0, 1)
                    </OnLoad>
                </Scripts>
            </StatusBar>
        </Frames>
        <Animations>
             <AnimationGroup parentKey="ActivateAnim" setToFinalAlpha="true">
                <Alpha childKey="ProgressBar" fromAlpha="0.5" toAlpha="1" duration="0.2" order="1"/>
                <Scale childKey="ProgressBar" fromScaleX="0.8" fromScaleY="0.8" toScaleX="1.2" toScaleY="1.2" duration="0.1" order="1"/>
                <Scale childKey="ProgressBar" fromScaleX="1.2" fromScaleY="1.2" toScaleX="1" toScaleY="1" duration="0.1" order="2"/>
            </AnimationGroup>
        </Animations>
    </Frame>

    <Frame name="BUII_PowerBarTemplate" inherits="BackdropTemplate" virtual="true">
        <Scripts>
            <OnLoad>
                self:SetBackdrop({
                    edgeFile = "Interface\\Buttons\\WHITE8X8",
                    edgeSize = 1,
                    tile = false,
                })
                self:SetBackdropBorderColor(0, 0, 0, 1)
                -- Alias PowerText for easy access
                self.PowerText = self.ProgressBar.PowerText
            </OnLoad>
        </Scripts>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="1" y="-1"/>
                        <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                    </Anchors>
                    <Color r="0.1" g="0.1" b="0.1" a="0.8"/>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <StatusBar parentKey="ProgressBar">
                <Anchors>
                    <Anchor point="TOPLEFT" x="1" y="-1"/>
                    <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        Mixin(self, SmoothStatusBarMixin)
                        self:SetMinMaxValues(0, 1)
                    </OnLoad>
                </Scripts>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="PowerText" inherits="GameFontHighlight" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </StatusBar>
        </Frames>
    </Frame>

    <Frame name="BUII_ResourceTrackerEditModeTemplate" inherits="EditModeSystemTemplate" virtual="true">
        <KeyValues>
            <KeyValue key="system" value="Enum.EditModeSystem.BUII_ResourceTracker" type="global"/>
            <KeyValue key="systemNameString" value="BUII_HUD_EDIT_MODE_RESOURCE_TRACKER_LABEL" type="global"/>
        </KeyValues>
        <Frames>
            <Frame inherits="EditModeSystemSelectionTemplate" setAllPoints="true" hidden="true"/>
        </Frames>
    </Frame>
</Ui>
